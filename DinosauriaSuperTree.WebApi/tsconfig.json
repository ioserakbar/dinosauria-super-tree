{
    "compilerOptions": {
        "target": "esnext",
        "module": "node16",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "outDir": "build",
        "types": ["jest", "reflect-metadata"]
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
